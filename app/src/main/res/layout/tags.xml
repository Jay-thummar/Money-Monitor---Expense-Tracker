    <ImageView
        android:id="@+id/hero"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/hero"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hero"
        android:layout_marginTop="10dp"
        android:text="Upgrade to Unlock This Feature"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Unlock the full potential of Expenses Manager and"
        android:layout_centerInParent="true"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enhance your financial management with Premium."
        android:layout_below="@+id/text2"
        android:layout_centerInParent="true"
        android:textSize="16dp" />

    <Button
        android:id="@+id/unlock_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/text3"
        android:layout_marginTop="20dp"
        android:text="Unlock Now"/>

</RelativeLayout>